<script>
    function ExportPdf() {
        kendo.drawing
            .drawDOM("#PreviewTamp1",
                {
                    paperSize: "A4",
                    margin: { top: "1cm", bottom: "1cm", left:"0.5cm", right:"0.5cm" },
                    scale: 0.8,
                    height: 500
                })
            .then(function (group) {
                kendo.drawing.pdf.saveAs(group, "Exported.pdf")
            });
    }
</script>
